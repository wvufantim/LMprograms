#!/bin/bash

#Make the bin directory

echo "**********MAKING BIN FOLDER**********"

mkdir /home/$USER/bin

#Download Bash Scripts

echo "**********DOWNLOADING BASH SCRIPTS**********"

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/up -P /home/$USER/bin

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/programs -P /$USER/tim/bin

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/popsound_LM -P /$USER/tim/bin

#Make scripts executable

echo "**********MAKING BASH SCRIPTS EXECUTABLE**********"

sudo chmod +x /home/$USER/bin/up

sudo chmod +x /home/tim/$USER/programs

sudo chmod +x /home/$USER/bin/popsound_LM

#Search for "bin" directory to add it to bin path

echo "**********REFRESHING SYSTEM TO FIND BIN FOLDER AND BASH FILES**********"

test -d "$HOME/bin" && PATH="$HOME/bin:$PATH"

#Run the intial update and program setup

echo "**********RUNNING SCRIPTS FOR INITIAL SETUP**********"

up

programs

echo "**********Your intial setup should be done!**********"
