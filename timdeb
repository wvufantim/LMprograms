#!/bin/bash

#Make the bin directory

sudo echo " __  __    _    _  _____ _   _  ____     ____ ___ _   _     _____ ___  _     ____  _____ ____
|  \/  |  / \  | |/ |_ _| \ | |/ ___|   | __ |_ _| \ | |   |  ___/ _ \| |   |  _ \| ____|  _ \
| |\/| | / _ \ | ' / | ||  \| | |  _    |  _ \| ||  \| |   | |_ | | | | |   | | | |  _| | |_) |
| |  | |/ ___ \| . \ | || |\  | |_| |   | |_) | || |\  |   |  _|| |_| | |___| |_| | |___|  _ <
|_|  |_/_/   \_|_|\_|___|_| \_|\________|____|___|_| \_____|_|   \___/|_____|____/|_____|_| \_\
                                   |_____|            |_____|"

mkdir /home/$USER/bin

#Download Bash Scripts

echo " ____   _____        ___   _ _     ___    _    ____ ___ _   _  ____     ____    _    ____  _   _     ____   ____ ____  ___ ____ _____ ____
|  _ \ / _ \ \      / | \ | | |   / _ \  / \  |  _ |_ _| \ | |/ ___|   | __ )  / \  / ___|| | | |   / ___| / ___|  _ \|_ _|  _ |_   _/ ___|
| | | | | | \ \ /\ / /|  \| | |  | | | |/ _ \ | | | | ||  \| | |  _    |  _ \ / _ \ \___ \| |_| |   \___ \| |   | |_) || || |_) || | \___ \
| |_| | |_| |\ V  V / | |\  | |__| |_| / ___ \| |_| | || |\  | |_| |   | |_) / ___ \ ___) |  _  |    ___) | |___|  _ < | ||  __/ | |  ___) |
|____/ \___/  \_/\_/  |_| \_|_____\___/_/   \_|____|___|_| \_|\________|____/_/   \_|____/|_| |_____|____/ \____|_| \_|___|_|    |_| |____/
                                                                  |_____|                      |_____|"

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/up -P /home/$USER/bin

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/programs -P /home/$USER/bin

wget https://raw.githubusercontent.com/wvufantim/LMprograms/master/popsound_LM -P /home/$USER/bin

#Make scripts executable

echo " __  __    _    _  _____ _   _  ____     ____   ____ ____  ___ ____ _____ ____     _______  _______ ____ _   _ _____  _    ____  _     _____
|  \/  |  / \  | |/ |_ _| \ | |/ ___|   / ___| / ___|  _ \|_ _|  _ |_   _/ ___|   | ____\ \/ | ____/ ___| | | |_   _|/ \  | __ )| |   | ____|
| |\/| | / _ \ | ' / | ||  \| | |  _    \___ \| |   | |_) || || |_) || | \___ \   |  _|  \  /|  _|| |   | | | | | | / _ \ |  _ \| |   |  _|
| |  | |/ ___ \| . \ | || |\  | |_| |    ___) | |___|  _ < | ||  __/ | |  ___) |  | |___ /  \| |__| |___| |_| | | |/ ___ \| |_) | |___| |___
|_|  |_/_/   \_|_|\_|___|_| \_|\________|____/ \____|_| \_|___|_|    |_| |________|_____/_/\_|_____\____|\___/  |_/_/   \_|____/|_____|_____|
                                   |_____|                                   |_____|"

sudo chmod +x /home/$USER/bin/up

sudo chmod +x /home/$USER/bin/programs

sudo chmod +x /home/$USER/bin/popsound_LM

#Search for "bin" directory to add it to bin path

echo " _____ ___ _   _ ____ ___ _   _  ____     ____ ___ _   _     _____ ___  _     ____  _____ ____
|  ___|_ _| \ | |  _ |_ _| \ | |/ ___|   | __ |_ _| \ | |   |  ___/ _ \| |   |  _ \| ____|  _ \
| |_   | ||  \| | | | | ||  \| | |  _    |  _ \| ||  \| |   | |_ | | | | |   | | | |  _| | |_) |
|  _|  | || |\  | |_| | || |\  | |_| |   | |_) | || |\  |   |  _|| |_| | |___| |_| | |___|  _ <
|_|   |___|_| \_|____|___|_| \_|\________|____|___|_| \_____|_|   \___/|_____|____/|_____|_| \_\
                                    |_____|            |_____|"

test -d "$HOME/bin" && PATH="$HOME/bin:$PATH"

#Run the intial update and program setup

echo " ____  _   _ _   _ _   _ ___ _   _  ____     ____   ____ ____  ___ ____ _____ ____
|  _ \| | | | \ | | \ | |_ _| \ | |/ ___|   / ___| / ___|  _ \|_ _|  _ |_   _/ ___|
| |_) | | | |  \| |  \| || ||  \| | |  _    \___ \| |   | |_) || || |_) || | \___ \
|  _ <| |_| | |\  | |\  || || |\  | |_| |    ___) | |___|  _ < | ||  __/ | |  ___) |
|_| \_\\___/|_| \_|_| \_|___|_| \_|\________|____/ \____|_| \_|___|_|    |_| |____/
                                       |_____|"

up

programs

echo " ___ _   _ ___ _____ ___    _    _         ____  _____ _____ _   _ ____  ____ ___  __  __ ____  _     _____ _____ _____
|_ _| \ | |_ _|_   _|_ _|  / \  | |       / ___|| ____|_   _| | | |  _ \/ ___/ _ \|  \/  |  _ \| |   | ____|_   _| ____|
 | ||  \| || |  | |  | |  / _ \ | |       \___ \|  _|   | | | | | | |_) | |  | | | | |\/| | |_) | |   |  _|   | | |  _|
 | || |\  || |  | |  | | / ___ \| |___     ___) | |___  | | | |_| |  __/| |__| |_| | |  | |  __/| |___| |___  | | | |___
|___|_| \_|___| |_| |___/_/   \_|_________|____/|_____| |_|  \___/|_____\____\___/|_|  |_|_|   |_____|_____| |_| |_____|
