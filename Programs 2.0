#!/bin/bash

#A script to install my favorite programs and uninstall programs that I do not want.

#Enable Firewall
sudo ufw enable

#Update
sudo apt update -yy

sudo apt remove mono-runtime-common gnome-orca -yy

sudo apt purge thunderbird hexchat transmission-gtk purge unattended-upgrades firefox -yy

sudo apt update -yy

sudo apt install chromium ttf-mscorefonts-installer opensc htop simplescreenrecorder numblockx mc easytag stacer -yy


curl -sS https://download.spotify.com/debian/pubkey.gpg | sudo apt-key add - 
echo "deb http://repository.spotify.com stable non-free" | sudo tee /etc/apt/sources.list.d/spotify.list
sudo apt-get install spotify-client -yy

sudo apt install apt-transport-https curl -yy

curl -s https://brave-browser-apt-release.s3.brave.com/brave-core.asc | sudo apt-key --keyring /etc/apt/trusted.gpg.d/brave-browser-release.gpg add -

echo "deb [arch=amd64] https://brave-browser-apt-release.s3.brave.com/ stable main" | sudo tee /etc/apt/sources.list.d/brave-browser-release.list
sudo apt update
sudo apt install brave-browser -yy
sudo apt install mint-meta-codecs -yy

sudo apt install vlc -yy

sudo apt update

flatpak install flathub com.simplenote.Simplenote flathub org.freefilesync.FreeFileSync flathub org.jitsi.jitsi-meet -y

curl -sS https://download.spotify.com/debian/pubkey_0D811D58.gpg | sudo apt-key add -

sudo apt update

sudo apt dist-upgrade -y

sudo apt autoremove -y

sudo apt autoclean -y

popsound
